    <script>
        if ($("<input />").prop("required") === undefined) {
            $(document).on("submit", function (e) {
                $(this)
                    .find("input, select, textarea")
                    .filter("[required]")
                    .filter(function () {
                        return this.value == '';
                    })
                    .each(function () {
                        e.preventDefault();
                        $(this).css({"border-color": "red"});
                        alert("Please fill the year of your birth, your first language and gender!");
                    });
            });
        }
    </script>

